---
import { Image } from "astro:assets";
import logoImg from "../assets/ICDR.png";

const navItems = [
  { label: "Arbitration", href: "#" },
  { label: "Mediation", href: "#" },
  { label: "Rules", href: "#" },
  { label: "Fee Structure", href: "#" },
  // { label: 'Resources', href: '#' },
];
---

<header class="bg-[#2E5E4E] shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image src={logoImg} alt="Company Logo Image" width={128} height={128} />
      <span class="ml-2 text-[#F8F8F8]"
        >Indian Council for Dispute Resolution</span
      >
    </a>
    <nav class="hidden md:flex space-x-6">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-[#F8F8F8] hover:text-[#4A4A4A] transition duration-100 ease-in-out"
          >
            {item.label}
          </a>
        ))
      }
    </nav>
    <!-- <a href="/#" class="bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-150 ease-in-out">
      Contact Us
    </a> -->
  </div>
</header>
